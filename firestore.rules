rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isLecturerOrAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['lecturer', 'admin'];
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data, admins can read all
      allow read: if isOwner(userId) || isAdmin();
      
      // Users can create their own profile during signup
      allow create: if isOwner(userId);
      
      // Users can update their own profile, admins can update any profile (for role management)
      allow update: if isOwner(userId) 
        && request.resource.data.uid == userId
        && request.resource.data.email == resource.data.email // Prevent email changes
        || isAdmin(); // Admins can update any user
      
      // No deletes allowed
      allow delete: if false;
    }
    
    // Books collection
    match /books/{bookId} {
      // Anyone can read books (for browsing)
      allow read: if true;
      
      // Only admins can create/update/delete books
      allow write: if isAdmin();
    }
    
    // Courses collection
    match /courses/{courseId} {
      // Anyone can read courses (for browsing)
      allow read: if true;
      
      // Only admins and lecturers can create/update courses
      allow write: if isLecturerOrAdmin();
    }
    
    // Transactions collection
    match /transactions/{transactionId} {
      // Users can only read their own transactions
      allow read: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
      
      // Transactions can only be created by the backend/cloud functions
      // Users cannot directly create transactions
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
      
      // No updates or deletes allowed
      allow update, delete: if false;
    }
    
    // Assignments collection
    match /assignments/{assignmentId} {
      // Authenticated users can read assignments
      allow read: if isAuthenticated();
      
      // Only lecturers/admins can create/update/delete
      allow create, update: if isLecturerOrAdmin();
      allow delete: if isLecturerOrAdmin();
    }
    
    // Submissions collection
    match /submissions/{submissionId} {
      // Students can read their own submissions; lecturers/admins can read all
      allow read: if isAuthenticated() 
        && (resource.data.studentId == request.auth.uid || isLecturerOrAdmin());
      
      // Students can create their own submissions
      allow create: if isAuthenticated() 
        && request.resource.data.studentId == request.auth.uid;
      
      // Lecturers/admins can update (for grading); no deletes except by admin
      allow update: if isLecturerOrAdmin();
      allow delete: if isAdmin();
    }
    
    // Grades collection
    match /grades/{gradeId} {
      // Students can read their own grades; lecturers/admins can read all
      allow read: if isAuthenticated() 
        && (resource.data.studentId == request.auth.uid || isLecturerOrAdmin());
      
      // Only lecturers/admins can create/update grades
      allow create, update: if isLecturerOrAdmin();
      allow delete: if isAdmin();
    }
    
    // Certificates collection
    match /certificates/{certificateId} {
      // Anyone can read certificates (for public verification)
      allow read: if true;
      
      // Only lecturers/admins can issue/revoke certificates
      allow create, update: if isLecturerOrAdmin();
      allow delete: if isAdmin();
    }
    
    // Forum posts collection
    match /forumPosts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() 
        && request.resource.data.authorId == request.auth.uid;
      allow update: if isAuthenticated() 
        && (resource.data.authorId == request.auth.uid || isAdmin());
      allow delete: if isAuthenticated() 
        && (resource.data.authorId == request.auth.uid || isAdmin());
      
      // Replies subcollection
      match /replies/{replyId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() 
          && request.resource.data.authorId == request.auth.uid;
        allow update: if isAuthenticated() 
          && (resource.data.authorId == request.auth.uid || isAdmin());
        allow delete: if isAuthenticated() 
          && (resource.data.authorId == request.auth.uid || isAdmin());
      }
    }
    
    // Blog posts collection
    match /blogPosts/{postId} {
      // Anyone can read published blog posts
      allow read: if true;
      // Only admins can create/update/delete blog posts
      allow write: if isAdmin();
    }
    
    // Daily tasks definitions (admin-managed)
    match /dailyTasks/{taskId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // User daily task completions
    match /userDailyTasks/{userId}/completions/{completionId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update, delete: if isAdmin();
    }
    
    // Support tickets
    match /supportTickets/{ticketId} {
      allow read: if isAuthenticated() 
        && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Enrollments collection
    match /enrollments/{enrollmentId} {
      allow read: if isAuthenticated() 
        && (resource.data.userId == request.auth.uid || isLecturerOrAdmin());
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() 
        && (resource.data.userId == request.auth.uid || isLecturerOrAdmin());
      allow delete: if isAdmin();
    }
    
    // Live classes collection
    match /liveClasses/{classId} {
      allow read: if isAuthenticated();
      allow create, update: if isLecturerOrAdmin();
      allow delete: if isLecturerOrAdmin();

      // Live class chat messages
      match /messages/{messageId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated()
          && request.resource.data.senderId == request.auth.uid;
        allow update, delete: if isAdmin();
      }
    }
    
    // Calls collection
    match /calls/{callId} {
      allow read: if isAuthenticated() 
        && (resource.data.callerId == request.auth.uid 
          || resource.data.receiverId == request.auth.uid 
          || isAdmin());
      allow create: if isAuthenticated() 
        && request.resource.data.callerId == request.auth.uid;
      allow update: if isAuthenticated() 
        && (resource.data.callerId == request.auth.uid 
          || resource.data.receiverId == request.auth.uid);
      allow delete: if isAdmin();
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
    }
    
    // Stakes collection
    match /stakes/{stakeId} {
      // Users can read their own stakes
      allow read: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
      
      // Users can create their own stakes
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
      
      // Users can update their own stakes (for unstaking)
      allow update: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
      
      // No deletes allowed
      allow delete: if false;
    }
    
    // Rewards collection
    match /rewards/{rewardId} {
      // Users can read their own rewards
      allow read: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
      
      // System creates rewards
      allow create: if isAuthenticated();
      
      // No updates or deletes
      allow update, delete: if false;
    }
    
    // Content collection
    match /content/{contentId} {
      // Users can read content
      allow read: if isAuthenticated();
      
      // Only lecturers and admins can create/update content
      allow write: if isLecturerOrAdmin();
    }
    
    // Loans collection
    match /loans/{loanId} {
      // Users can read their own loans
      allow read: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
      
      // Users can create their own loan requests
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
      
      // Users can update their loans (for repayment), admins can approve
      allow update: if (isAuthenticated() && resource.data.userId == request.auth.uid) 
        || isAdmin();
      
      // No deletes
      allow delete: if false;
    }
    
    // Scholarships collection
    match /scholarships/{scholarshipId} {
      // Anyone can read available scholarships
      allow read: if true;
      
      // Only admins can create/update scholarships
      allow write: if isAdmin();
    }

    // Loan payments collection
    match /loan_payments/{paymentId} {
      // Users can read their own loan payments; admins can read all
      allow read: if isAuthenticated()
        && (resource.data.studentId == request.auth.uid || isAdmin());
      
      // Users can create their own loan payments
      allow create: if isAuthenticated()
        && request.resource.data.studentId == request.auth.uid;
      
      // Admins can update (for reconciliation); no deletes
      allow update: if isAdmin();
      allow delete: if false;
    }

    // User achievements collection (keyed by uid)
    match /userAchievements/{userId} {
      // Users can read their own achievements; admins can read all
      allow read: if isOwner(userId) || isAdmin();
      
      // Any authenticated user can write (achievement triggers fire in the
      // context of the acting user, which may differ from the target userId
      // e.g. a lecturer grading an assignment triggers the student's achievement)
      allow write: if isAuthenticated();
    }
  }
}
