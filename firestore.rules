rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isLecturerOrAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['lecturer', 'admin'];
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data, admins can read all
      allow read: if isOwner(userId) || isAdmin();
      
      // Users can create their own profile during signup
      allow create: if isOwner(userId);
      
      // Users can update their own profile, admins can update any profile (for role management)
      allow update: if isOwner(userId) 
        && request.resource.data.uid == userId
        && request.resource.data.email == resource.data.email // Prevent email changes
        || isAdmin(); // Admins can update any user
      
      // No deletes allowed
      allow delete: if false;
    }
    
    // Books collection
    match /books/{bookId} {
      // Anyone can read books (for browsing)
      allow read: if true;
      
      // Only admins can create/update/delete books
      allow write: if isAdmin();
    }
    
    // Courses collection
    match /courses/{courseId} {
      // Anyone can read courses (for browsing)
      allow read: if true;
      
      // Only admins and lecturers can create/update courses
      allow write: if isLecturerOrAdmin();
    }
    
    // Transactions collection
    match /transactions/{transactionId} {
      // Users can only read their own transactions
      allow read: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
      
      // Transactions can only be created by the backend/cloud functions
      // Users cannot directly create transactions
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
      
      // No updates or deletes allowed
      allow update, delete: if false;
    }
    
    // Assignments collection (future)
    match /assignments/{assignmentId} {
      // Students can read assignments for their enrolled courses
      allow read: if isAuthenticated();
      
      // Only lecturers/admins can create/update
      allow write: if false; // Will be enabled with admin panel
    }
    
    // Submissions collection (future)
    match /submissions/{submissionId} {
      // Students can read their own submissions
      allow read: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
      
      // Students can create their own submissions
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
      
      // Students cannot update after submission (prevent cheating)
      allow update, delete: if false;
    }
    
    // Grades collection (future)
    match /grades/{gradeId} {
      // Students can read their own grades
      allow read: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
      
      // Only lecturers/admins can create/update grades
      allow write: if false; // Will be enabled with admin panel
    }
    
    // Certificates collection (future - blockchain backed)
    match /certificates/{certificateId} {
      // Anyone can read certificates (for verification)
      allow read: if true;
      
      // Only system can create certificates
      allow write: if false;
    }
    
    // Stakes collection
    match /stakes/{stakeId} {
      // Users can read their own stakes
      allow read: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
      
      // Users can create their own stakes
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
      
      // Users can update their own stakes (for unstaking)
      allow update: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
      
      // No deletes allowed
      allow delete: if false;
    }
    
    // Rewards collection
    match /rewards/{rewardId} {
      // Users can read their own rewards
      allow read: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
      
      // System creates rewards
      allow create: if isAuthenticated();
      
      // No updates or deletes
      allow update, delete: if false;
    }
    
    // Content collection
    match /content/{contentId} {
      // Users can read content
      allow read: if isAuthenticated();
      
      // Only lecturers and admins can create/update content
      allow write: if isLecturerOrAdmin();
    }
    
    // Loans collection
    match /loans/{loanId} {
      // Users can read their own loans
      allow read: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
      
      // Users can create their own loan requests
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
      
      // Users can update their loans (for repayment), admins can approve
      allow update: if (isAuthenticated() && resource.data.userId == request.auth.uid) 
        || isAdmin();
      
      // No deletes
      allow delete: if false;
    }
    
    // Scholarships collection
    match /scholarships/{scholarshipId} {
      // Anyone can read available scholarships
      allow read: if true;
      
      // Only admins can create/update scholarships
      allow write: if isAdmin();
    }
  }
}
